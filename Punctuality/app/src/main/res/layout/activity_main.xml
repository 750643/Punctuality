<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button3"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/neuropol"
        android:gravity="left"
        android:text="Minimum Day"
        android:textColor="@color/Inchworm"
        android:textSize="35sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/neuropol"
        android:gravity="left"
        android:text="Late Start"
        android:textColor="@color/Inchworm"
        android:textSize="35sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/Aresnic"
        android:fontFamily="@font/conthrax"
        android:text="Schedules"
        android:textColor="@color/coral2"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/neuropol"
        android:gravity="left"
        android:text="Normal Bell"
        android:textColor="@color/Inchworm"
        android:textSize="35sp" />

</RelativeLayout>